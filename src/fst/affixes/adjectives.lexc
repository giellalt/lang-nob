! =============================
!! # Sublexica for adjective roots
! =============================

!! * a1  god         god         godt        gode
!! * a2  norsk       norsk       norsk       norske
!! * a3  ekte        ekte        ekte        ekte
!! * a4  oppskjørtet oppskjørtet oppskjørtet oppskjørtede/oppskjørtete
!! * a5  makaber     makaber     makabert    makabre
!! *     lunken      lunken      lunkent     lunkne
!! * aV  blå         blå         blått       blå





!! ## Basic paradigms
! ===============

LEXICON a23
!! @LEXNAME@
  a2 ;
  a3 ;

!LEXICON a13
!  a1 ;
!  a3 ;

!LEXICON a12
!  a1 ;
!  a2 ;

LEXICON a1pos
 +A: positive ;

LEXICON a1
 +A: positive ;
 +A: a-neuter ;
 +A: grade-e  ;

LEXICON a1b
 +A:mX4 positive ;
 +A:mX4 a-neuter ;
 +A:mX4 grade-e  ;

LEXICON a2lig
         :ig a2 ; ! herlig
 +Nynorsk+Use/NG:eg a2 ; ! herleg

LEXICON a2 !
 +A: positive    ;
 +A: a-no-neuter ;
 +A: grade-C     ;

LEXICON a3 !
 +A: positive    ;
 +A: a-no-neuter ;

LEXICON a4 ! oppskjørtet
 +A:   positive-indef ;
 +A:   positive-def   ;
 +A:X6 positive-def   ;
 +A:   a-no-neuter    ;
 +A:   grade-e        ; !oppskjørtete
 +A:X6 grade-e        ; !oppskjørtede

LEXICON a5 ! overlegen
 +A:X1 positive ;
 +A:   a-neuter ;
 +A:X1 grade-e  ;

LEXICON aV ! ny, fri
   +A+Pos+Msc+Sg+Indef:     # ;
   +A+Pos+Fem+Sg+Indef:     # ;
   +A+Pos+Neu+Sg+Indef:tt   # ;
         +A+Pos+Sg+Def:e    # ;
       +A+Pos+Pl+Indef:e    # ;
         +A+Pos+Pl+Def:e    # ;
               +A+Comp:ere  # ;
             +A+Superl:est  # ;
         +A+Superl+Def:este # ;

       +A+Comp+Nynorsk+Use/NG:are  # ;
     +A+Superl+Nynorsk+Use/NG:ast  # ;
 +A+Superl+Def+Nynorsk+Use/NG:aste # ;


LEXICON EGEN ! legen
                  +A:nX1 positive ;
 +A+Pos+Neu+Sg+Indef:%>t   #        ;
                  +A:nX1 grade-e  ;

LEXICON LIKEDAN !
 +A:  positive-indef ; ! likedan
 +A:n positive-def   ; ! likedanne
 +A:  a-neuter       ; ! likedant



!! ### Sublexica
! =========

LEXICON positive
  positive-indef ;
  positive-def  ;

LEXICON positive-indef
!                    R ; ! A+N-samansetjingar er for dristig (?)
 +Pos+Msc+Sg+Indef: # ;
 +Pos+Fem+Sg+Indef: # ;
  +Pos+MF+Sg+Indef: # ; ! MF ???
!  +Pos+Neu+Sg+Indef: # ; ! ta Neu separat

LEXICON positive-def
 +Pos+Sg+Def+Clt:%>es # ;
 +Pos+Sg+Def:%>e # ;
 +Pos+Pl+Def:%>e # ;
 +Pos+Pl+Indef:%>e # ;

LEXICON a-neuter ! fint
 +Pos+Neu+Sg+Indef:%>Q3t # ;
 +Der/AAdv+Adv:%>Q3t # ;

LEXICON a-no-neuter ! vennlig
 +Der/AAdv+Adv: # ;
 +Pos+Neu+Sg+Indef: # ;
!                    R ;
 
LEXICON grade-e
                 +Comp:%>ere  # ;
         +Superl+Indef:%>est  # ;
           +Superl+Def:%>este # ;

         +Comp+Nynorsk+Use/NG:%>are  # ;
 +Superl+Indef+Nynorsk+Use/NG:%>ast  # ;
   +Superl+Def+Nynorsk+Use/NG:%>aste # ;

LEXICON grade-C
                 +Comp:%>ere  # ;
         +Superl+Indef:%>est  # ;
           +Superl+Def:%>este # ;

         +Comp+Nynorsk+Use/NG:%>are  # ;
 +Superl+Indef+Nynorsk+Use/NG:%>ast  # ;
   +Superl+Def+Nynorsk+Use/NG:%>aste # ;



